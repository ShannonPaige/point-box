<h1>Welcome <%= @user.first_name %></h1>
<p>Points: <%= @user.reload.points_available %></p>
<p>Points Redeemed: <%= @user.reload.points_redeemed %></p>

<h2>Rewards:</h2>
<% @user.rewards.each do |reward| %>
  <%= reward.name %>
  <%= reward.description %>
<% end %>

<%= link_to "Purchase Reward", rewards_path(user_id: @user.id) %>
