<h2>Edit Reward</h2>
<div class="container">
  <div class="row">
    <div class="col s12 m8 l12">
      <div class="card-panel blue-grey lighten-5">
        <%= form_for(@reward, url: admin_reward_path(@reward, admin_id: @admin)) do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.label :point_value, "Point Value" %>
          <%= f.text_field :point_value %>
          <%= f.label :description %>
          <%= f.text_field :description %>
          <% if @reward.image.exists? %>
            <%= image_tag(@reward.image.url, width:"150")%><br />
          <% end %>
          <%= f.label :image, "Upload an Image" %>
          <%= f.file_field :image %><br><br>
          <%= f.submit "Update Reward" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
