<h1>Create Reward</h1>

<%= form_for(@reward, url: admin_rewards_path(@user.id)) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :point_value, "Point Value" %>
  <%= f.text_field :point_value %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit "Create Reward" %>
<% end %>
