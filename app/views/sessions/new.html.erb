<div class="row">
     <div class="col s6 m6">
       <div class="card-panel teal">
         <span class="white-text">

           <h1>Login to Your Account</h1>

           <%= form_for(:session, url: login_path) do |f| %>
             <%= f.label :username %>
             <%= f.text_field :username %>
             <%= f.label :password %>
             <%= f.text_field :password %>
           <%= f.submit "Login" %>
           <% end %>

         </span>
       </div>
     </div>

     <div class="row">
        <div class="col s6 m6">
          <div class="card">
            <div class="card-image">
              <img src="https://agendaviajera.files.wordpress.com/2011/06/bora-bora6.jpg">
              <span class="card-title darken">Bora Bora - 1000 pts</span>
            </div>
          </div>
        </div>
      </div>
   </div>
