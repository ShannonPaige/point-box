<h1>You are Now Purchasing Rewards:</h1>
<div class="row" id="admin-dashboard"><br><br>
  <div class="col s12 m12">
     <div class="card blue-grey lighten-5">
       <div class="card-content white-text">

         <div class="col s12 m12">
           <div class="card blue-grey darken-1">
             <div class="card-content white-text">

              <% Reward.all.each do |reward| %>
                <div id=<%="#{reward.name.downcase}" %>>
                  <h4><%= reward.name %> (<%= reward.point_value %> points)</h4>
                  <% if reward.image.exists? %>
                    <img class="z-depth-3" width="500"<%= image_tag(reward.image.url, width:"150")%></img><br>
                  <% end %>
                  <h5><%= reward.description %> - <%= link_to "Purchase Reward", user_rewards_path(@user, reward_id: reward.id), method: :post %></h5><br><br>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
